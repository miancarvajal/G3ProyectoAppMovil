<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FechaTutoria">

    <TextView

        android:id="@+id/textView2"
        android:layout_width="379dp"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Seleccione la Fecha y Hora disponible para su asesoria"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnFecha"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="21dp"
        android:text="Fecha"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtDate"
        app:layout_constraintEnd_toStartOf="@+id/txtDate"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="110dp"
        android:layout_height="29dp"
        android:layout_marginStart="138dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="62dp"
        android:text="Hora"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/chkHora1"
        app:layout_constraintEnd_toEndOf="@+id/txtDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDate" />

    <CheckBox
        android:id="@+id/chkHora1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="8dp"
        android:onClick="seleccionFecha1"
        android:text="8:00 am"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/btnFecha" />

    <CheckBox
        android:id="@+id/chkHora2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:onClick="seleccionFecha2"
        android:text="10:00 am"
        app:layout_constraintStart_toStartOf="@+id/chkHora1"
        app:layout_constraintTop_toBottomOf="@+id/chkHora1" />

    <CheckBox
        android:id="@+id/chkHora3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:onClick="seleccionFecha3"
        android:text="12:am"
        app:layout_constraintStart_toStartOf="@+id/chkHora2"
        app:layout_constraintTop_toBottomOf="@+id/chkHora2" />

    <CheckBox
        android:id="@+id/chkHora4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="23dp"
        android:onClick="seleccionFecha4"
        android:text="2:00 pm"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <CheckBox
        android:id="@+id/chkHora5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="seleccionFecha5"
        android:text="4:00 pm"
        app:layout_constraintStart_toStartOf="@+id/chkHora4"
        app:layout_constraintTop_toBottomOf="@+id/chkHora4" />

    <CheckBox
        android:id="@+id/chkHora6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:onClick="seleccionFecha6"
        android:text="6:00pm"
        app:layout_constraintStart_toStartOf="@+id/chkHora5"
        app:layout_constraintTop_toBottomOf="@+id/chkHora5" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="63dp"
        android:onClick="RegistrarTutoria"
        android:text="Aceptar"
        app:layout_constraintEnd_toEndOf="@+id/chkHora6"
        app:layout_constraintTop_toBottomOf="@+id/chkHora6" />


</androidx.constraintlayout.widget.ConstraintLayout>